FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["TicketOn.Server.csproj", "./"]
RUN dotnet restore "TicketOn.Server.csproj"
COPY . .
WORKDIR "/src/."
RUN dotnet build "TicketOn.Server.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "TicketOn.Server.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "TicketOn.Server.dll"]